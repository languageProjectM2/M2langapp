<div id="loginSign" class="container-lg text-center d-flex justify-content-center mt-5">
  <div class="card shadow p-3 mb-5 bg-black rounded">
    <div style="width: 30rem; height: 20rem;" class="container-lg mt-2 card-body">
      <h1 id="titleText" class="h3 mb-3 font-weight-normal">Log In</h2>
        <form style="max-width:480px;margin:auto;" action="/login" method="POST">
          <label class="sr-only" for="username"></label>
          <input class="form-control rounded-pill" type="text" name="username" placeholder="username" required
            autofocus>
          <label class="sr-only" for="password"></label>
          <input class="form-control rounded-pill" type="password" name="password" placeholder="password" required
            autofocus>
          <div class="checkbox">
            <label>
              <input class="mt-3" type="checkbox" value="remember-me"> Remember me
            </label>
          </div>

          <button id="signBtn" class="w-50 btn btn-lg mt-3 rounded-pill" type="submit">login</button>

        </form>
    </div>
  </div>
</div>
{{#if message}}
<p style='color: red'>{{message}}</p>
{{/if}}


