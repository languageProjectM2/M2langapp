<div class="text-center mt-5 ">
  <h1 class="h3 mb-3 font-weight-normal">Log In</h2>
    <form style="max-width:480px;margin:auto;" action="/login" method="POST">
      <label class="sr-only" for="username"></label>
      <input class="form-control" type="text" id="username" placeholder="username" required autofocus>
      <label class="sr-only" for="password"></label>
      <input class="form-control" type="password" id="password" placeholder="password" required autofocus>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">login</button>

    </form>
</div>
{{#if message}}
<p style='color: red'>{{message}}</p>
{{/if}}


